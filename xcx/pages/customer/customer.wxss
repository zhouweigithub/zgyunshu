page {
    background-color: #fff;
}

.cont {
    margin-left: 75rpx;
    width: 600rpx;
    height: 800rpx;
    background-color: #fff;
}

.nav {
    margin-left: 75rpx;
    width: 300rpx;
    height: 200rpx;
    margin-top: 10rpx;
    flex-direction: row;
    align-items: center;
    justify-content: center;
    display: flex;
    color: #535353;
    font-weight: bold;
}

.focus {
    background: #535353;
    width: 80rpx;
    height: 10rpx;
    border-radius: 5rpx;
    margin-left: 0rpx;
    margin-top: 30rpx;
}

.login {
    flex: 1;
    height: 80rpx;
}

.type {
    font-size: 24rpx;
    color: #888;
    font-weight: bold;
}

input {
    border-bottom: 2rpx solid #eee;
    height: 70rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.phonenum {
    border-bottom: 2rpx solid #eee;
    height: 70rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.other-button-hover {
    background-color: rgba(155,155,155,0.7);
}

.upinfo {
    border-radius: 0;
    position: none;
    background-color: #686868;
    color: #fff;
    width: 400rpx;
    margin-top: 40rpx;
    box-shadow: 0 4rpx 4rpx rgba(0,0,0,0.3);
}

.getphonebtn {
    border-radius: 0;
    position: none;
    background-color: #686868;
    color: #fff;
    border-radius: 6rpx;
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    margin-right: 0;
    margin-top: 40rpx;
    box-shadow: 0 4rpx 4rpx rgba(0,0,0,0.3);
}

.other-button-hover {
    background-color: #727272;
}