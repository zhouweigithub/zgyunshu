page {
    text-align: center;
}

.name {
    background: #fff;
    height: 100rpx;
    width: 400rpx;
    position: relative;
    border-radius: 6rpx;
    box-shadow: 0 0 6rpx rgba(0,0,0,0.2);
    color: #535353;
    line-height: 100rpx;
    font-size: 32rpx;
    top: 80rpx;
    padding-left: 30rpx;
    text-align: left;
    display: inline-block;
}

.qr {
    width: 300rpx;
    height: 300rpx;
    position: relative;
    left: 50%;
    margin-left: -150rpx;
    border-radius: 4rpx;
    border: 1rpx solid #f2f2f2;
    margin-top: 140rpx;
}

image {
    position: absolute;
    width: 200rpx;
    height: 200rpx;
    left: 50%;
    margin-left: -100rpx;
    top: 50%;
    margin-top: -100rpx;
}

.text {
    margin-top: 40rpx;
    font-size: 30rpx;
    color: #ff9e00;
}