.type {
    font-size: 24rpx;
    color: #888;
    font-weight: bold;
}

input {
    border-bottom: 2rpx solid #eee;
    height: 70rpx;
    line-height: 60rpx;
    font-size: 28rpx;
}

.forget {
    width: 600rpx;
    margin-top: 40rpx;
    margin-left: 75rpx;
}

.getphonebtn {
    border-radius: 0;
    position: none;
    background-color: #686868;
    color: #fff;
    border-radius: 6rpx;
    width: 160rpx;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 26rpx;
    margin-right: 0;
    margin-top: 40rpx;
    box-shadow: 0 4rpx 4rpx rgba(0,0,0,0.3);
    display: inline-block;
}

button[disabled]:not([type]) {
    color: #fff;
    background-color: #686868;
}

.upinfo {
    border-radius: 0;
    position: none;
    background-color: #686868;
    color: #fff;
    width: 400rpx;
    margin-top: 40rpx;
    box-shadow: 0 4rpx 4rpx rgba(0,0,0,0.3);
}

.other-button-hover {
    background-color: #727272;
}