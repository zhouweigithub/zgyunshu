<button bindgetuserinfo="getUserInfo" openType="getUserInfo" style="position: absolute;width: 100%;height: 110%;background-color: rgba(0,0,0,0);z-index:1001;padding-bottom: 200rpx;box-sizing: content-box" wx:if="{{!hasUserInfo&&canIUse}}"></button>
<view class="main" style="height: 100%;width: 100%;z-index: 100">
    <scroll-view scrollY style="z-index:999;height: 500rpx;display: inline;border:none">
        <image src="../../images/banner.png" style="width:100%;height:330rpx;"></image>
        <view bindtap="toMap" class="item_nav">
            <image src="../../images/map.png"></image>
            <view>地图</view>
        </view>
        <view bindtap="toDrivers" class="item_nav">
            <image src="../../images/driver.png" style="width:80rpx;margin-left: 130rpx;"></image>
            <view>司机管理</view>
        </view>
        <view bindtap="toCars" class="item_nav">
            <image src="../../images/car.png" style="height:80rpx;"></image>
            <view>车辆管理</view>
        </view>
        <view bindtap="toAddInfo" class="item_nav" style="vertical-align: top;">
            <image src="../../images/card.png" style="height:70rpx;"></image>
            <view>添加司机</view>
        </view>
        <view bindtap="toBroad" class="item_nav" style="position: relative;">
            <view style="height:40rpx;line-height: 40rpx;width: 140rpx;text-align: center;font-size: 18rpx;color: #fff;border-radius: 30rpx;background: #f04567;right: 10rpx;position: absolute;">一条新的通知</view>
            <image src="../../images/broad.png" style="height:70rpx;"></image>
            <view>公告</view>
        </view>
        <view class="item_nav" style="vertical-align: top;margin-bottom: 120rpx;">
            <image src="../../images/more.png" style="height:70rpx;"></image>
            <view>更多</view>
        </view>
    </scroll-view>
</view>
