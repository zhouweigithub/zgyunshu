.item {
    height: 120rpx;
    border-bottom: 1rpx solid #f0f0f0;
    position: relative;
}

.title {
    height: 120rpx;
    font-size: 30rpx;
    color: #888;
    line-height: 120rpx;
    display: inline-block;
    position: absolute;
    top: 0;
}

input {
    height: 120rpx;
    line-height: 120rpx;
    color: #535353;
    display: inline-block;
    font-size: 32rpx;
    position: absolute;
    top: 0;
    margin-left: 200rpx;
}

.upinfo {
    border-radius: 0;
    position: none;
    background-color: #686868;
    color: #fff;
    width: 400rpx;
    margin-top: 40rpx;
    box-shadow: 0 4rpx 4rpx rgba(0,0,0,0.3);
    margin-bottom: 100rpx;
}

.other-button-hover {
    background-color: #727272;
}