.board_list {
    width: 96%;
    margin-top: 10rpx;
    margin-left: 2%;
    background: #fff;
    border-radius: 4rpx;
    display: block;
    box-shadow: 0 0 4rpx rgba(0,0,0,0.2);
    padding-top: 24rpx;
    padding-bottom: 24rpx;
}

.cont {
    color: #919599;
    width: 90%;
    margin-left: 5%;
    font-size: 14px;
    margin-top: 8px;
    height: 50px;
    overflow: hidden;
    line-height: 25px;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.time {
    width: 90%;
    margin-left: 5%;
    color: #b2bcc5;
    font-size: 10px;
    display: block;
    margin-top: 16rpx;
}

.title {
    color: #0a0b0d;
    font-size: 18px;
    display: block;
    width: 90%;
    margin-left: 5%;
}